{
    "name": "bakle/translator",
    "description": "Translate lang files to any defined languages with just a command.",
    "keywords": ["bakle", "translator", "laravel", "google", "google translator", "translate"],
    "type": "library",
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^7.0|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4",
        "orchestra/testbench": "^6.23",
        "phpunit/phpunit": "^9.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Bashir Akle",
            "email": "bashir.akle@gmail.com",
            "role": "Developer and Owner"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bakle\\Translator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakle\\Translator\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Bakle\\Translator\\TranslatorServiceProvider"
            ]
        }
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php"
    }
}
